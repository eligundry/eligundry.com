# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
charset = utf-8

[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2

[*.{css,scss,less}]
indent_style = space
indent_size = 2

[*.{ejs,html,json,jinja,lr,xml,md,mdx,yml}]
indent_style = space
indent_size = 2
