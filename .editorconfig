# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
charset = utf-8

[*.{js,jsx,ts,tsx,mjs}]
indent_style = space
indent_size = 2

[*.{css,scss,less}]
indent_style = space
indent_size = 2

[*.{ejs,html,json,jinja,lr,xml,md,mdx,yml,njk,liquid,astro}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.toml]
indent_style = space
indent_size = 2
