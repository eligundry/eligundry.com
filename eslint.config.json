{
  "extends": ["plugin:astro/recommended", "plugin:mdx/recommended", "prettier"],
  "overrides": [
    {
      "files": ["*.astro"],
      "parser": "astro-eslint-parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "extraFileExtensions": [".astro"],
        "sourceType": "module"
      },
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "sourceType": "module"
      },
      "rules": {}
    },
    {
      "files": ["*.mdx"],
      "rules": {
        "null-null": "off"
      }
    }
  ]
}
