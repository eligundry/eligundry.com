---
import daylio from '@lib/daylio.ts'
import '../styles/fonts.css';
import '../styles/global.scss';
import '../styles/prism-material.scss';

export interface Props {
	title?: string;
	description: string;
	image?: string;
	type?: string;
	next?: string;
	prev?: string;
	path?: string;
}

const { title, description, image, type, next, prev, path } = Astro.props as Props;
const faviconEmoji = await daylio.getFaviconEmoji()
---

<!-- Common -->
<meta charset="UTF-8" />
<title>{title ? `${title} | Eli Gundry` : 'Eli Gundry'}</title>
<meta name="description" content={description} />
<!-- Sitemap -->
<link rel="sitemap" href="/sitemap.xml" />
<!-- RSS -->
<link rel="alternate" type="application/rss+xml" href="/feed/posts.xml" />

<!-- Favicon -->
<link rel="icon" href={`data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>${faviconEmoji}</text></svg>`} />

<!-- SEO -->
<link rel="canonical" href={'https://eligundry.com' + path ?? ''} />
{next && <link rel="next" aria-label="Previous Page" href={new URL(next, canonicalURL).href}>}
{prev && <link rel="prev" aria-label="Next Page" href={new URL(prev, canonicalURL).href}>}

<!-- OpenGraph -->
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
{image && (<meta property="og:image" content={new URL(image, canonicalURL)}>)}

<!-- Twitter -->
<meta name="twitter:card" content={image ? 'summary_large_image' : 'summary'} />
<meta name="twitter:site" content="@astro" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
{image && (<meta name="twitter:image" content={image}>)}
