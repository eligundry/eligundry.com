<Layout title="Resume">
  <div
    class:list={[
      'paper',
      'gap-4',
      'flex',
      'flex-col',
      '[&_.prose_ul]:list-outside',
      '[&_.prose_ul]:pl-1',
      '[&_.prose_ul]:sm:pl-0',
      '[&_.prose_ul_li]:pl-0',
      '[&_.prose_ul_ul]:pl-4',
      '[&_.prose_ul_ul]:my-0',
      '[&_.prose]:print:text-sm',
    ]}
  >
    <header
      class="hidden print:flex flex-row justify-between prose border-b-2 border-b-accent"
    >
      <h1 class="text-lg mb-0">Eli Gundry</h1>
      <h2 class="text-sm mt-0 !font-mono self-center">
        <span class="text-primary">Full Stack Web Engineer</span>
        <span class="comment"> // ❤️ Javascript, Devops && Web Standards</span>
      </h2>
    </header>
    <Section>
      <header class="flex justify-between border-b-2 border-b-accent">
        <h2 class="my-0 text-lg block print:hidden">Work</h2>
        <h2 class="my-0 text-lg hidden print:block">Selected Work</h2>
        <h6
          class:list={[
            'self-center',
            'italic',
            'text-neutral-900',
            'hidden',
            'print:block',
            'text-xs',
          ]}
        >
          View full resume at <a href="/resume/">eligundry.com/resume/</a>
        </h6>
        <button
          class:list={[
            'print-button',
            'btn',
            'btn-sm',
            'btn-ghost',
            'sm:tooltip',
            'sm:tooltip-primary',
            'sm:tooltip-left',
            'self-start',
            'normal-case',
            'hidden',
            'print:hidden',
            'sm:inline',
          ]}
          aria-label="download this resume by printing it as a pdf"
          data-tip="Download this resume by printing it as a PDF"
        >
          <FaDownload />
        </button>
      </header>
      {
        resume.work.map((exp) => (
          <Experience
            variant="work"
            name={exp.company}
            position={exp.position}
            url={exp.website}
            startDate={exp.startDate}
            endDate={exp.endDate}
            location={exp.location}
            summary={exp.summary}
            highlights={exp.highlights}
            printHide={exp.printHide}
          />
        ))
      }
    </Section>

    <Section title="Education">
      {
        resume.education.map((exp) => (
          <Experience
            variant="education"
            name={exp.institution}
            url={exp.website}
            startDate={exp.startDate}
            endDate={exp.endDate}
            position={[exp.studyType, exp.area].filter((i) => !!i).join(' - ')}
            location={exp.location}
            summary={exp.summary}
            highlights={[]}
          />
        ))
      }
    </Section>

    <Section title="Skills & Technologies">
      <ul class="mt-0">
        {
          resume.skills.map((section) => {
            let prefix

            switch (section.name) {
              case 'Languages':
                prefix = 'Fluent in'
                break
              case 'Frameworks':
                prefix = 'Built complex web applications using'
                break
              case 'Tools':
                prefix = 'Loves using'
                break
              case 'Love Hate':
                prefix =
                  'Has a love-hate relationship (that I will happily explain) with'
                break
            }

            const skillsLinks = formatter.format(
              Object.entries(section.keywords).map(
                ([name, url]) =>
                  `<a href="${url}" itemprop="knowsAbout">${name}</a>`
              )
            )

            return <li set:html={`${prefix} ${skillsLinks}.`} />
          })
        }
      </ul>
    </Section>

    <Section title="Activities & Interests">
      <ul class="mt-0">
        {resume.activitesInterests.map((ai) => <li set:html={ai} />)}
      </ul>
    </Section>
    <Footer />
  </div>
</Layout>

<style>
  @page {
    margin-bottom: 0.5cm;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const printBtn = document.querySelector('.print-button')

    if (!printBtn) {
      return
    }

    printBtn.addEventListener('click', () => {
      window.print()
    })
  })
</script>
