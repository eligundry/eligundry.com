---
import dateFns from 'date-fns'
import daylio, { ActivityMapping } from '../lib/daylio'
import Layout from '../layouts/Layout.astro'
import DaylioEntry from '../components/DaylioEntry.astro'

const entries = await daylio.getRange(dateFns.subMonths(new Date(), 6))
---

<Layout title="Feelings" fancyBackgroundPoints={300}>
  {entries.map((entry) => <DaylioEntry entry={entry} wrapInPaper />)}
</Layout>
