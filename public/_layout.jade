doctype html
html(lang="en-us")
	head
		meta(charset="utf-8")
		if page_title
			title #{ page_title } &mdash; #{ title }
		else
			title #{ title }
		if description
			meta(name="description", content=description)
		else
			meta(name="description", content=site_description)
		!= partial("_shared/meta")
		link(rel="canonical", href="#{ root_url }/#{ current.source }")
	body(id=current.source, itemscope, itemtype="https://schema.org/Person")
		!= partial("_shared/header")
		!= partial("_shared/nav")
		main(role="main")
			!= yield
		!= partial("_shared/footer")
		!= partial("_shared/scripts")
